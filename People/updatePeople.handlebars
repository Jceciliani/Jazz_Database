<h1>Update {{person.first_name}} {{person.last_name}}: </h1>

<form id="update-person" action="/people" method="post">

	First name: <input type="text" name="first_name" value="{{person.first_name}}"><br>
	Last name: <input type="text" name="last_name" value="{{person.last_name}}"><br>
	Date of Birth:<input type="date" name="dob" value="{{person.dob}}"><br>
	Hometown: <select name="hid" id="hometown-selector">
		{{#each hometown}}
		<option value="{{hometown_id}}">{{city_name}}</option>
		{{/each}}
	</select><br>
</form>
<button onclick="updatePeople({{person.people_id}})">Update</button>
<script defer>selectHometown({{person.hid}});</script>
	
